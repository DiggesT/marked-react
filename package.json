{
  "name": "marked-react",
  "description": "Render Markdown as React components",
  "version": "1.0.1",
  "type": "module",
  "author": "sibiraj-s",
  "license": "MIT",
  "repository": "https://github.com/sibiraj-s/marked-react.git",
  "bugs": "https://github.com/sibiraj-s/marked-react/issues",
  "homepage": "https://github.com/sibiraj-s/marked-react#readme",
  "main": "./dist/marked-react.cjs",
  "module": "./dist/marked-react.js",
  "exports": {
    ".": "./dist/marked-react.js",
    "./package.json": "./package.json"
  },
  "typings": "./src/index.d.ts",
  "sideEffects": false,
  "files": [
    "src/index.d.ts",
    "dist/"
  ],
  "keywords": [
    "react",
    "markdown",
    "marked",
    "markedjs",
    "no dangerouslySetInnerHTML"
  ],
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx",
    "dev": "vite",
    "build:docs": "vite build --base=/marked-react/",
    "deploy:docs": "node ./scripts/deploy-pages.js",
    "build": "rollup -c",
    "test": "jest",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "is-ci || npm run build"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "dependencies": {
    "marked": "^4.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@commitlint/cli": "^16.0.1",
    "@jest/globals": "^27.4.6",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@vitejs/plugin-react": "^1.1.4",
    "commitlint-config-non-conventional": "^1.0.1",
    "eslint": "^8.6.0",
    "eslint-config-pegasus": "^3.2.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.4.7",
    "lint-staged": "12.1.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.63.0",
    "vite": "^2.7.10"
  }
}
